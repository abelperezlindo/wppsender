<style>
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td,
  th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #dddddd;
  }
</style>

<div class="container botones p-4 mt-2 mb-2">
  <div class="row mx-auto">
    <div class="col-md-4 p-3">
      <a href="/" class="btn btn-primary btn-block">Volver</a>
    </div>
  </div>
</div>

<div class="container  p-4 mt-2 mb-2">
  <div class="row mx-auto">
    <form class="form-inline" action="/messages/add" method="POST">
      <div class="form-group p-2">
        <input type="textfield" required="true" class="form-control" id="destino" name="destino" placeholder="Número"
          minlength="13" maxlength="13">
      </div>
      <div class="form-group p-2">
        <input type="textfield" required="true" maxlength="255" class="form-control" rows="4" name="mensaje"
          placeholder="Mensaje"> </textarea>
      </div>
      <div class="form-group p-2">
        <button class="btn btn-success btn-block" value="save" name="save"> Nuevo Mensaje </button>
      </div>
    </form>
  </div>

</div>

<div class="container  p-4 mt-4 mb-4">

  <h2>Cola de mensajes a enviar</h2>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Id</th>
        <th>Número</th>
        <th>Mensaje</th>
        <th>Estado</th>
        <th>Sender</th>

      </tr>
    </thead>
    <tbody>
      {{#each rows}}
      <tr>
        <td>{{id}}</td>
        <td>{{destino}}</td>
        <td>{{mensaje}}</td>
        <td>
          {{#if enviado}}
          El mensaje fue enviado
          {{fecha_enviado}}
          {{else}}
          mensaje no enviado
          {{/if}}
          {{#if anulado}}
          El mensaje fue anulado
          {{fecha_anulado}}
          {{/if}}
        </td>
        <td>{{sender}}</td>
      </tr>
      {{else}}
      <tr>
        <td>
          <p>Sin Resultados</p>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>