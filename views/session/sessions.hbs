<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>


<div class="container botones p-4 mt-4">
    <div class="row mx-auto">
        <div class="col-md-4 p-3">
            <a href="/" class="btn btn-primary btn-block">Volver</a>
        </div>  
    </div>
</div>
<div class="container  p-4 mt-4 mb-4">
  <h2>Cola de mensajes a enviar</h2>

  <table class="table" >
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Número</th>
            <th>Activo</th>
            <th>Descripción</th>
            <th>Fecha alta</th>
            <th>Ultimo Uso</th>
            <th>Mensajes Enviados</th>
        </tr>
    </thead>
    <tbody>
  {{#each rows}}
      <tr>
          <td>{{id}}</td>
          <td>{{numero}}</td>
          <td>{{activo}}</td>
          <td>{{descripcion}}</td>
          <td>{{fecha_alta}}</td>
          <td>{{ultimo_uso}}</td>
          <td>{{enviados}}</td>
      </tr>
  {{else}}
      <tr><td><p>Sin Resultados</p></td></tr>
  {{/each}} 
    </tbody>
  </table>
</div>



